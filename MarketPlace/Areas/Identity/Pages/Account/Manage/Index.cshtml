@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.CurrentUser.UserName
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.CurrentUser.Email
        </dd>
        <dt class="col-sm-2">
            Balance
        </dt>
        <dd class="col-sm-10">
            @Math.Round(Model.CurrentUser.Balance, 2)$
        </dd>
     </dl>
</div>

<div>
    <form asp-page="./" method="post" class="d-inline-block">
        <input type="number" min="1" name="amount" placeholder="How much $"/>
        <button type="submit" class="btn btn-success">Add Balance</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
